{
    "manifest_version": 3,
    "name": "AI Form Fill Helper",
    "version": "1.28.75",
    "permissions": [
        "activeTab",
        "contextMenus",
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "options_page": "options.html",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "all_frames": true,
            "js": [
                "content.js"
            ],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "img/*.svg"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "action": {},
    "icons": {
        "16": "img/icon16.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    }
}
